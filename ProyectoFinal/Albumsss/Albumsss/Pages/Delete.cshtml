@page
@model Albumsss.Pages.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<style>
    /* Estilos para el contenedor principal */
    .custom-background {
        background-color: #D6EAF8; /* Color de fondo */
        padding: 20px; /* Espaciado interior */
        border-radius: 10px; /* Bordes redondeados */
    }
</style>

<div class="custom-background">
    <h1 class="text-danger">Borrar Álbum</h1>

    <!-- Advertencia de eliminación -->
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">¡Advertencia!</h4>
        <p>¿Estás seguro de que quieres eliminar este álbum? Esta acción no se puede deshacer.</p>
    </div>

    <!-- Detalles del álbum en una tarjeta -->
    <div class="card">
        <div class="card-header">
            <h4>Detalles del Álbum</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Album.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Album.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Album.Artista)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Album.Artista)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Album.Precio)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Album.Precio)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Album.Existencia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Album.Existencia)
                </dd>
            </dl>
        </div>
    </div>

    <!-- Formulario para confirmar la eliminación -->
    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Album.Id" /> <!-- Campo oculto para el Id del álbum -->
        <button type="submit" class="btn btn-danger">Eliminar</button> <!-- Botón para enviar el formulario de eliminación -->
        <a asp-page="./Index" class="btn btn-secondary">Regresar a la lista</a> <!-- Enlace para cancelar y regresar a la lista de álbumes -->
    </form>
</div>

