@page
@model Albumsss.Pages.AgregarModel

@{
    ViewData["Title"] = "Albums";
}

@{
    ViewData["Title"] = "Alta de Álbumes";
}

<style>
    /* Estilos para el contenedor principal */
    .custom-background {
        background-color: #D6EAF8; /* Color de fondo */
        padding: 20px; /* Espaciado interior */
        border-radius: 10px; /* Bordes redondeados */
        margin-top: 20px; /* Espacio superior */
    }

    /* Estilos para el formulario */
    .form-group {
        margin-bottom: 15px; /* Espaciado inferior de los grupos de formularios */
    }

        .form-group label {
            font-weight: bold; /* Negrita para los labels */
        }

        .form-group input {
            width: 100%; /* Ancho completo para los inputs */
            padding: 10px; /* Espaciado interior */
            box-sizing: border-box; /* Incluye el padding en el ancho total */
            border: 1px solid #ccc; /* Borde de los inputs */
            border-radius: 4px; /* Bordes redondeados */
        }

    .btn {
        padding: 10px 15px; /* Espaciado interior del botón */
        background-color: #007bff; /* Color de fondo del botón */
        color: #fff; /* Color del texto del botón */
        border: none; /* Sin borde */
        border-radius: 4px; /* Bordes redondeados */
        cursor: pointer; /* Cursor de mano al pasar por el botón */
        margin-top: 10px; /* Espacio superior del botón */
    }

        .btn:hover {
            background-color: #0056b3; /* Color de fondo del botón al pasar el cursor */
        }
</style>

<div class="custom-background">
    <h1>Alta de Álbumes</h1>

    <!-- Formulario de alta de álbumes -->
    <form method="post" class="mt-4">
      
        <div class="form-group">
            <label for="Nombre">Nombre del Álbum</label>
            <input type="text" id="Nombre" name="Nombre" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Artista">Nombre del Artista</label>
            <input type="text" id="Artista" name="Artista" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Precio">Precio</label>
            <input type="number" step="0.01" id="Precio" name="Precio" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Existencia">Existencia</label>
            <input type="number" id="Existencia" name="Existencia" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>
